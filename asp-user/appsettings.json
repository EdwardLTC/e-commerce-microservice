{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Confluent.Kafka.Producer": "None"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=e_commerce_microservice;Username=postgres;Password=postgres"
  },
  "Kafka": {
    "Producer": {
      "BootstrapServers": "localhost:9092",
      "Acks": "All",
      "MessageTimeoutMs": 10000,
      "SocketTimeoutMs": 10000,
      "RetryBackoffMs": 500,
      "EnableIdempotence": true,
      "MaxInFlight": 5
    },
    "Consumer": {
      "BootstrapServers": "localhost:9092",
      "GroupId": "asp-user-group",
      "AutoOffsetReset": "Earliest",
      "EnableAutoCommit": false,
      "SessionTimeoutMs": 30000,
      "MaxPollIntervalMs": 60000,
      "HeartbeatIntervalMs": 10000,
      "SocketTimeoutMs": 10000,
      "MetadataMaxAgeMs": 300000
    }
  },
  "GrpcSettings": {
    "OrderServiceUrl": "localhost:4040"
  },
  "AllowedHosts": "*"
}
